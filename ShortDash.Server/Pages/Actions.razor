@page "/actions"
@inject ShortDash.Server.Data.DashboardService dashboardService


<h3>Actions</h3>

<ul class="nav flex-column">
    @foreach (var action in DashboardActions)
    {
        var link = $"actions/{action.DashboardActionId}";
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@link" Match="NavLinkMatch.All">
                <span class="oi oi-puzzle-piece" aria-hidden="true"></span> @action.Title
            </NavLink>
        </li>
    }
</ul>

@code {
    private List<DashboardAction> DashboardActions = new List<DashboardAction>();

    protected override async Task OnParametersSetAsync()
    {
        DashboardActions = await dashboardService.GetDashboardActionsAsync();
    }
}
