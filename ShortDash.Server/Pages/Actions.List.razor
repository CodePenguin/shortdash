@page "/actions"
@inject DashboardService dashboardService
@inject NavigationManager NavigationManagerService;

<h3>Actions</h3>

<button @onclick="AddAction" class="btn btn-outline-primary">Add</button>

<ul class="nav flex-column">
    @foreach (var action in DashboardActions)
    {
        var link = $"actions/{action.DashboardActionId}";
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@link" Match="NavLinkMatch.All">
                <span class="oi oi-puzzle-piece" aria-hidden="true"></span> @action.Title
            </NavLink>
        </li>
    }
</ul>

@code {
    private List<DashboardAction> DashboardActions = new List<DashboardAction>();

    protected void AddAction()
    {
        NavigationManagerService.NavigateTo($"/actions/new");
    }

    protected override async Task OnParametersSetAsync()
    {
        var list = await dashboardService.GetDashboardActionsAsync();
        DashboardActions = list.OrderBy(o => o.Title).ToList();
    }
}