@page "/actions"
@attribute [Authorize(Policy = Policies.EditActions)]
@inherits PageBase

<div class="page text-dark">
    <button @onclick="AddAction" class="btn btn-outline-primary float-right">Add</button>
    <h3>Actions</h3>

    @if (DashboardActions.Count == 0)
    {
        <div class="alert alert-info">
            <span class="fas fa-info-circle"></span> You do not have any actions yet.  Click "Add" to create a new one.
        </div>
    }

    <div class="grid container-fluid">
        <div class="row text-center">
            @foreach (var action in DashboardActions)
            {
                var link = $"actions/{action.DashboardActionId}";
                <div class="col py-3 px-3 flex-grow-0">
                    <NavLink class="nav-link" href="@link" Match="NavLinkMatch.All">
                        <div class="grid-cell">
                            <DashboardActionIcon DashboardAction="action" />
                            <div class="grid-icon-caption">
                                @action.Label
                            </div>
                        </div>
                    </NavLink>
                </div>
            }
        </div>
    </div>
</div>