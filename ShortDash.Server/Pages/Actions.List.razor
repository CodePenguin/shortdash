@page "/actions"

<h3>Actions</h3>

<button @onclick="AddAction" class="btn btn-outline-primary">Add</button>

<ul class="nav flex-column">
    @foreach (var action in DashboardActions)
    {
        var link = $"actions/{action.DashboardActionId}";
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@link" Match="NavLinkMatch.All">
                <span class="oi oi-puzzle-piece" aria-hidden="true"></span> @action.Title
            </NavLink>
        </li>
    }
</ul>