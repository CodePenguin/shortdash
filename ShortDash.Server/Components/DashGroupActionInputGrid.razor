<div class="grid container-fluid">
    <div class="row text-center">
        @foreach (var subAction in SubActions)
        {
            <div class="col py-3 px-3 flex-grow-0">
                <div class="grid-cell">
                    <DashboardActionIcon DashboardAction="subAction.DashboardActionChild" />
                    <div class="grid-icon-caption">
                        @subAction.DashboardActionChild.Label
                    </div>
                    <DashboardGridCellEditControls TCellType="DashboardSubAction" Cell="subAction" OnMoveCellLeft="MoveCellLeft" OnMoveCellRight="MoveCellRight" OnRemoveCell="RemoveCell" />
                </div>
            </div>
        }
        <div class="col py-3 px-3 flex-grow-0">
            <a href="" @onclick="ShowAddDialog" @onclick:preventDefault>
                <div class="grid-cell">
                    <div class="add-cell grid-icon rounded text-dark">
                        <div class="grid-icon-content d-table-cell align-middle">
                            <span class="fas fa-plus"></span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>